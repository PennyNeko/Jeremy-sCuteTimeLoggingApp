<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jeremy_sCuteTimeLoggingApp"
        xmlns:src="Jeremy_sCuteTimeLoggingApp.MainWindow"
        xmlns:Properties="clr-namespace:Jeremy_sCuteTimeLoggingApp.Properties" xmlns:Forms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms" d:DataContext="{d:DesignInstance Type=local:WorkEntryDataContext}" x:Class="Jeremy_sCuteTimeLoggingApp.MainWindow"
            
    mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:DateTimeConverter x:Key="dateTimeConverter"/>
        <local:TitleConverter x:Key="titleConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="91*"/>
        </Grid.ColumnDefinitions>
        <UniformGrid Grid.Column="2" HorizontalAlignment="Left" Height="106.987" Margin="10,0,0,0" VerticalAlignment="Bottom" Width="263">
            <Button x:Name="LoginButton" Content="Log in" Click="LoginButton_Click" Margin="10" RenderTransformOrigin="-0.892,0.865"/>
            <Button x:Name="SignOutButton" Content="Sign Out" Click="SignOutButton_Click" Margin="10,10,10,9.999" Visibility="Collapsed"/>
            <Button x:Name="SaveEntryButton" Content="Save Entry" Margin="10" Click="SaveEntryButton_Click"/>
        </UniformGrid>
        <StackPanel Grid.Column="2" VerticalAlignment="Top" Height="307.013">
            <Label x:Name="TitleLabel" Content="{Binding SelectedDataGridItem.Date, Converter={StaticResource titleConverter}}" VerticalAlignment="Top" Margin="10,30,10,10"/>
            <TextBox x:Name="NameTextBox" TextWrapping="Wrap" Text="{Binding SelectedDataGridItem.Name}" VerticalAlignment="Top" Margin="10,5"/>
            <TextBox x:Name="DescriptionTextBox" TextWrapping="Wrap" Text="{Binding SelectedDataGridItem.Description}" VerticalAlignment="Top" MinHeight="50" Margin="10,5"/>
            <TextBox x:Name="StartDateTextBox" TextWrapping="Wrap" Text="{Binding Path=SelectedDataGridItem.StartTime, Converter={StaticResource dateTimeConverter}}" VerticalAlignment="Top" Margin="10,5"/>
            <TextBox x:Name="EndDateTextBox" TextWrapping="Wrap" Text="{Binding Path=SelectedDataGridItem.EndTime, Converter={StaticResource dateTimeConverter}}" VerticalAlignment="Top" Margin="10,5"/>
            <Label x:Name="SourceLabel" VerticalAlignment="Top" Content="{Binding SelectedDataGridItem.Source}" Margin="10,5"/>
            <Label x:Name="LinkLabel"  VerticalAlignment="Top" Content="{Binding SelectedDataGridItem.Link}" Margin="10,5"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Top">
            <DataGrid x:Name="WorkEntryDataGrid" Margin="10" ItemsSource="{Binding Events}" SelectionMode="Single" AutoGeneratedColumns="WorkEntryDataGrid_AutoGeneratedColumns" IsReadOnly="True" AutoGenerateColumns="False" SelectionChanged="WorkEntryDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Selected"/>
                    <DataGridTextColumn Binding="{Binding Name}" ClipboardContentBinding="{x:Null}" Header="Title" MaxWidth="200"/>
                    <DataGridTextColumn Binding="{Binding StartTime, Converter={StaticResource dateTimeConverter}}" ClipboardContentBinding="{x:Null}" Header="Start Time"/>
                    <DataGridTextColumn Binding="{Binding EndTime, Converter={StaticResource dateTimeConverter}}" ClipboardContentBinding="{x:Null}" Header="End Time"/>
                    <DataGridTextColumn Binding="{Binding Description}" ClipboardContentBinding="{x:Null}" Header="Description" CanUserResize="False"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
